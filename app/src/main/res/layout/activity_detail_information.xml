<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    tools:context=".DetailInformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/shape_header">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back_button_white"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="Icon Back Button" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_account"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn_back"
                android:contentDescription="Logo SICC"/>

            <TextView
                android:id="@+id/title_lomba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PKM"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/logo_image"/>

            <TextView
                android:id="@+id/subTitle_lomba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PKM-T (Teknologi)"
                android:textSize="17sp"
                android:textColor="@color/white_gray"
                android:textAlignment="center"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/title_lomba"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_tgl_lomba"
                android:layout_width="220dp"
                android:layout_height="40dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#804876A3"
                android:layout_below="@id/subTitle_lomba">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tgl_lomba"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="21 Februari 2023"
                        android:textSize="17sp"
                        android:textColor="@color/white_gray"
                        android:textAlignment="center"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textSize="20sp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="20dp"
            android:layout_below="@id/layout_header"/>

        <TextView
            android:id="@+id/desc_text"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:text="Deskripsi Perlombaan"
            android:textSize="17sp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/welcome_text"/>

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/desc_text"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Tutup"
            android:textSize="17sp" />

    </RelativeLayout>

</ScrollView>