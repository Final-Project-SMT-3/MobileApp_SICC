<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".notification.MsgRejectFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="30dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/rejected_animation" />

    <TextView
        android:id="@+id/title_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DI TOLAK"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsmedium"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/subtitle_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tetap Semangat !"
        android:textSize="15sp"
        android:fontFamily="@font/poppinsregular"
        android:textAlignment="center"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/detailtitle_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mungkin Belum Rejeki, Yuk Coba Lagi."
        android:textSize="15sp"
        android:fontFamily="@font/poppinsregular"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_dospem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari Dospem Baru"
        android:textSize="15sp"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginTop="25dp"/>

</LinearLayout>