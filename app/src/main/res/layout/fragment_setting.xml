<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    tools:context=".fragments.SettingFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="22sp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/title"/>

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppinssemibold"
        android:layout_marginTop="5dp"
        android:layout_below="@id/image_profile"/>

    <TextView
        android:id="@+id/txt_jabatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Leader"
        android:drawableEnd="@drawable/ic_complete"
        android:drawablePadding="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppinsregular"
        android:layout_below="@id/txt_nama"/>

    <LinearLayout
        android:id="@+id/btn_profile_kelompok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/txt_jabatan">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_person"
            android:layout_marginEnd="15dp"
            android:contentDescription="Icon Person Button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Kelompok"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsmedium"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_info_aplikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/btn_profile_kelompok">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_info"
            android:layout_marginEnd="15dp"
            android:contentDescription="Icon Info Button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi Aplikasi"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsmedium"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/btn_info_aplikasi">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_logout"
            android:layout_marginEnd="15dp"
            android:contentDescription="Icon Info Button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="17sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppinsmedium"/>

    </LinearLayout>

</RelativeLayout>