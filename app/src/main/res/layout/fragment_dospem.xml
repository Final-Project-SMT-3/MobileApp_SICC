<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DospemFragment">

    <TextView
        android:id="@+id/title_dospem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dosen Pembimbing :"
        android:textSize="17sp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/subtitle_dospem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Dosen Pembimbing dan Lakukan Proses Pengajuan"
        android:textSize="15sp"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/title_dospem"
        tools:ignore="RtlCompat" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@id/subtitle_dospem">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_Dospem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </androidx.recyclerview.widget.RecyclerView>

    </ScrollView>

</RelativeLayout>